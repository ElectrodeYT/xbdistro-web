{% extends "base.html.j2" %}

{% block title %}Search Results - XBDistro Package Explorer{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Search Results for "{{ query }}"</h1>
        
        {% if count == 0 %}
        <div class="alert alert-info">
            No sources found matching your search query.
        </div>
        {% else %}
        <div class="alert alert-success">
            Found {{ count }} source{% if count != 1 %}s{% endif %} matching your search query.
        </div>
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Source Name</th>
                        <th>Local Version</th>
                        <th>Latest Version</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for source in results %}
                        {% include 'source_search_list_entry.html.j2' %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
        
        <div class="mt-4">
            <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
{% endblock %}