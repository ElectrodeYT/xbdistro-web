{% extends "base.html.j2" %}

{% block title %}{{ source_name }} - XBDistro Source Explorer{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Sources</a></li>
                <li class="breadcrumb-item active">{{ source_name }}</li>
            </ol>
        </nav>

        <h1 class="mb-4">{{ source_name }}</h1>

        <!-- Latest Version Card -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Latest Version</h5>
            </div>
            <div class="card-body">
                {% if latest_version.error %}
                <div class="alert alert-warning">
                    {{ latest_version.error }}
                </div>
                {% else %}
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="mb-3">{{ latest_version.version }}</h3>
                        <p><strong>Source:</strong> <span class="badge bg-info">{{ latest_version.source }}</span></p>
                        <p><strong>Timestamp:</strong> {{ latest_version.timestamp }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Latest Versions by Source -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Latest Versions by Source</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Source</th>
                                <th>Version</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for source in sources %}
                            <tr>
                                <td>{{ source.source }}</td>
                                <td>
                                    <span class="badge bg-secondary version-badge">{{ source.version }}</span>
                                    {% if source.is_outdated %}
                                    <i class="fas fa-exclamation-triangle outdated-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="This package is out of date"></i>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Packages -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">Packages</h5>
            </div>
            <div class="card-body">
                {% if packages %}
                <div class="accordion" id="packagesAccordion">
                    {% for package in packages %}
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading{{ loop.index }}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                    data-bs-target="#collapse{{ loop.index }}" aria-expanded="false" 
                                    aria-controls="collapse{{ loop.index }}">
                                {{ package.name }}
                                {% if not package.maintainer %}
                                <span class="badge bg-danger ms-2">No Maintainer</span>
                                {% endif %}
                                {% set missing_count = 0 %}
                                {% if not package.license %}{% set missing_count = missing_count + 1 %}{% endif %}
                                {% if not package.category %}{% set missing_count = missing_count + 1 %}{% endif %}
                                {% if not package.homepage_url %}{% set missing_count = missing_count + 1 %}{% endif %}
                                {% if not package.summary %}{% set missing_count = missing_count + 1 %}{% endif %}
                                {% if not package.description %}{% set missing_count = missing_count + 1 %}{% endif %}
                                {% if missing_count > 0 %}
                                <span class="badge bg-warning text-dark ms-2">{{ missing_count }} missing field{% if missing_count > 1 %}s{% endif %}</span>
                                {% endif %}
                            </button>
                        </h2>
                        <div id="collapse{{ loop.index }}" class="accordion-collapse collapse" 
                             aria-labelledby="heading{{ loop.index }}" data-bs-parent="#packagesAccordion">
                            <div class="accordion-body">
                                {% include 'package_detail_element.html.j2' %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="alert alert-info">
                    No packages found for this source.
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Version History -->
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="card-title mb-0">Version History</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Version</th>
                                <th>Source</th>
                                <th>Timestamp</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for version in versions %}
                            <tr>
                                <td>{{ version.version }}</td>
                                <td>
                                    <span class="badge bg-info source-badge">{{ version.source }}</span>
                                </td>
                                <td>{{ version.timestamp }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-secondary">Back to Source List</a>
        </div>
    </div>
</div>
{% endblock %}
